---
import MainLayout from "../layouts/MainLayout.astro";
import Spisning from "../components/Spisning.astro";
import Services from "../components/Services.astro";
import ImgRow from "../components/ImgRow.astro";
import Hero from "../components/Hero.astro";
---

<MainLayout>
  <Hero />
  <div class="open">
    <Services text="Se hvad vi serverer" items={["Hver dag fra 12-15 er der åbent sandwich på ristet rugbrød med lækkert fyld, hjemmebagte boller og diverse kager og lækkerier. Dog undtagen mandag", "Mandag fra 12-16 er der kun åbent for selvbetjent kaffe og the.", "Hver onsdag fra 17 kan man få dagens vegetariske gryderet.", "Hver torsdag klokken 18 inviterer vi til fællesspisning.", "Vi serverer altid diverse lækre kaffer efter smag og behag og andre drikkevarer, hjemmelavede lemonader, øl, vin og meget mere. "]} bgColor="#AC7470" shadowColor="#69434F" headingColor="#FDF3EC" textColor="#FDF3EC" />
    <div class="image_row">
      <div class="image_row">
        <ImgRow image="/images/Services_01.webp" alt="img1" />
        <ImgRow image="/images/Services_02.webp" alt="img2" />
        <ImgRow image="/images/Services_03.webp" alt="img3" />
      </div>
      <Spisning title="Fællesspisning" text="Hver torsdag spiser og hygger vi sammen. Den skønne mad bliver serveret fra klokken 18 af vores søde personale. 

Prisen er 105 kr. for voksne og 50 kr. for børn (over 12 år). Husk at køb din billet til fællesspisning, som du kan booke via. vores bookingsystem nedenunder.
" image="/images/spisningsbillede.webp" />

      <div class="tider">
        <Services text="Vores åbningstider" items={["Mandag: Lukket, men mulighed for kaffe og the fra 12-16", "Tirsdag: 12-17", "Onsdag: 12-20 fra kl. 17 af er der vegetarisk gryderet", "Torsdag: 12-20 fra kl. 18 er der fællesspisning", "Fredag: 12-16"]} bgColor="#AC7470" shadowColor="#69434F" headingColor="#FDF3EC" textColor="#FDF3EC" />
      </div>
    </div>
  </div>
</MainLayout>
